%h1 Listing employees

%table.table-condensed
  %thead
    %tr
      %th First name
      %th Last name
      %th
      %th
      %th

  %tbody
    - @employees.each do |employee|
      %tr
        %td= employee.first_name
        %td= employee.last_name
        %td= link_to 'Show', employee
        %td= link_to 'Edit', edit_employee_path(employee)
        %td= link_to 'Destroy', employee, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= simple_form_for :employee, url: import_employees_url do |f|
  = f.input :csv, as: :file, label: 'Upload CSV'
  = f.button :submit, 'Upload'

= link_to 'New Employee', new_employee_path
